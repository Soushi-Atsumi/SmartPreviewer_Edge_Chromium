{
	"$schema": "http://json.schemastore.org/webextension",

	"author": "Soushi Atsumi",

	"background": {
		"persistent": false,
		"scripts": [ "background/background.js" ]
	},

	"browser_action": {
		"default_icon": {
			"24": "icons/icon-24.png",
			"40": "icons/icon-40.png",
			"44": "icons/icon-44.png",
			"48": "icons/icon-48.png",
			"50": "icons/icon-50.png",
			"96": "icons/icon-96.png",
			"150": "icons/icon-150.png",
			"192": "icons/icon-192.png",
			"300": "icons/icon-300.png",
			"384": "icons/icon-384.png",
			"768": "icons/icon-768.png",
			"1080": "icons/icon-1080.png",
			"1536": "icons/icon-1536.png"
		},
		"default_popup": "popup/popup.html"
	},

	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js": [ "content/content.js" ]
		}
	],

	"default_locale": "en",

	"description": "__MSG_extensionDescription__",

	"icons": {
		"24": "icons/icon-24.png",
		"40": "icons/icon-40.png",
		"44": "icons/icon-44.png",
		"48": "icons/icon-48.png",
		"50": "icons/icon-50.png",
		"96": "icons/icon-96.png",
		"150": "icons/icon-150.png",
		"192": "icons/icon-192.png",
		"300": "icons/icon-300.png",
		"384": "icons/icon-384.png",
		"768": "icons/icon-768.png",
		"1080": "icons/icon-1080.png",
		"1536": "icons/icon-1536.png"
	},

	"manifest_version": 2,

	"name": "__MSG_extensionName__",

	"options_page": "options/options.html",

	"permissions": [ "storage" ],

	"version": "1.0.0.0"
}
